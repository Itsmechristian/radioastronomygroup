<div class="container b-create">
<form action="/user/create/article" method="post">
{{#if errors}}
{{#each errors}}
<small>{{msg}}</small>
{{/each}}
{{/if}}
<label for="title">Title</label>
<input type="text" name="title" placeholder="Title..." id="title" autocomplete="off" value="{{title}}">
<textarea id="editor" name="body" rows="10" cols="5">{{{body}}}</textarea>
<button type="submit">Post</button>
</form>
</div>