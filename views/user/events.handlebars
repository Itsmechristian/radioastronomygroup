<div class="container-fluid b-event">
  <div class="create-event-wrapper">
    {{#if success}}
    <small id="success">{{success}}</small>
    {{/if}}
    <form action="/user/create/events" method="post">
      <input type="text" name="place" id="place" placeholder="Place...">
      <input type="text" name="fulldate" id="datepicker" onkeydown="return false" placeholder="Date...">
      <textarea type="text" name="description" id="description" placeholder="Description..." maxlength="50"></textarea>
      <small><span id="number">0</span>/50</small>
      <button type="submit">Create Event</button>
    </form>
  </div>
  <div class="event-list-wrapper">
    {{#if event2018}}
    <div class="year">
      <h3>2018</h3>
    </div>
    {{#each event2018}}
    <div class="event" data-iso="{{isodate}}">
      <div class="box-date">
        <div class="month">
          <h4>{{subdate.month}}</h4>
        </div>
        <div class="date">
          <h2>{{subdate.date}}</h2>
        </div>
      </div>
      <div class="info">
        <div class="head-wrapper">
      <h4>{{place}} <i class="fa fa-map-marker"></i></h4>
      <a id="delete-event" data-id={{_id}}></a>
        </div>
        <small>{{subdate.day}}</small>
      <p>{{description}}</p>
      </div>
    </div>
    {{/each}}
    {{/if}}
