<div class="container b-register">
  {{#if errorforms}}
    <form action="/home/register" method="post" id="registerform" class="errorForms">
      <h2>Register</h2>
      <label for="Username" id="usernamelabel">Username</label>
      <input class="input" id="username" type="text" name="username" placeholder="Username*" value="{{errorforms.username}}">
      <div class="usernameErrors">
      {{#each usernameError}}
        <small>{{{msg}}}</small>
      {{/each}}
      </div>
      <label for="firstname" id="firstnamelabel">Firstname</label>
      <input class="input" id="firstname" type="text" name="firstname" placeholder="Firstname*">
      <label for="firstname" id="lastnamelabel">Lastname</label>
      <input class="input" id="lastname" type="text" name="lastname" placeholder="Lastname*">
      <label for="firstname" id="emaillabel">Email</label>
      <input class="input" id="email" type="email" name="email" placeholder="Email*">
      <label for="firstname" id="passwordlabel">Password</label>
      <input class="input" id="password" type="password" name="password" placeholder="Password*">
      <label for="firstname" id="password2label">Confirm Password</label>
      <input class="input" id="password2" type="password" name="password2" placeholder="Confirm Password*">
      <button type="submit" id="submit">Submit</button>
      <a href="#">Already Have An Account?</a>
</form>
    {{else}}
      <form action="/home/register" method="post" id="registerform">
      <h2>Register</h2>
      <label for="Username" id="usernamelabel">Username</label>
      <input class="input" id="username" type="text" name="username" placeholder="Username*">
      <label for="firstname" id="firstnamelabel">Firstname</label>
      <input class="input" id="firstname" type="text" name="firstname" placeholder="Firstname*">
      <label for="firstname" id="lastnamelabel">Lastname</label>
      <input class="input" id="lastname" type="text" name="lastname" placeholder="Lastname*">
      <label for="firstname" id="emaillabel">Email</label>
      <input class="input" id="email" type="email" name="email" placeholder="Email*">
      <label for="firstname" id="passwordlabel">Password</label>
      <input class="input" id="password" type="password" name="password" placeholder="Password*">
      <label for="firstname" id="password2label">Confirm Password</label>
      <input class="input" id="password2" type="password" name="password2" placeholder="Confirm Password*">
      <button type="submit" id="submit">Submit</button>
      <a href="#">Already Have An Account?</a>
</form>
    {{/if}}
  </div>